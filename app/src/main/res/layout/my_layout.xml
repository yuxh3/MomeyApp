<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_title_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="存管"
            android:textColor="@color/txt_baclk_theme"/>

        <TextView
            android:gravity="center"
            android:textColor="@color/txt_baclk_theme"
            android:id="@+id/tv_title_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="非存管"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/txt_gray_white"/>

    <com.example.yuxinhua.momeyapp.widgt.RVPindicator
        android:id="@+id/log_indicator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="vertical"
        app:item_count = "2"
        app:indicator_style = "triangle"
        app:text_color_hightlight="@color/inverst_head_yellow"
        app:text_color_normal="@color/txt_baclk_theme"
        />

</LinearLayout>